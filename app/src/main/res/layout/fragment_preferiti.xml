                                android:layout_marginStart="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginRight="4dp"
                                android:fontFamily="@font/hello_avocado"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:textColor="#FFCA4700"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/buttonPrefe_Salva_Preferito"
                                android:layout_width="55dp"
                                android:layout_height="match_parent"
                                android:gravity="left|end"
                                app:icon="@android:drawable/btn_star_big_on"
                                app:iconSize="20dp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textPrefe_Gradazione"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:text="@string/gradazione_Drink"
                        android:textSize="25sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/textViewPrefe_Alchool_Drink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="4dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/black" />
