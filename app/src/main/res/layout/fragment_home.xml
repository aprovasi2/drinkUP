<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgpsh_fullsize_anim"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/ButtonDrink"
                style="@android:style/Widget.Holo.ImageButton"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="10px"
                android:layout_marginRight="16px"
                android:layout_marginBottom="10px"
                android:layout_weight="0.3"
                android:text="@string/buttonDrink"
                android:fontFamily="@font/jcandlestick"
                android:textSize="27dp"
                app:backgroundTint="#FF9800"
                app:icon="@drawable/cocktail"
                tools:ignore="MissingPrefix" />

            <Button
                android:id="@+id/Button_DrinkPerIngredient"
                style="@android:style/Widget.Holo.ImageButton"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="10px"
                android:layout_marginRight="16px"
                android:layout_marginBottom="10px"
                android:layout_weight="0.3"
                android:text="@string/buttonDrinkIngredient"
                android:fontFamily="@font/jcandlestick"
                android:textSize="27dp"
                app:backgroundTint="#FF9800"
                app:icon="@drawable/ingredient"
                tools:ignore="MissingPrefix" />

            <Button
                android:id="@+id/button_Ingredient"
                style="@android:style/Widget.Holo.ImageButton"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="10px"
                android:layout_marginRight="16px"
                android:layout_marginBottom="10px"
                android:layout_weight="0.3"
                android:text="@string/buttonIngredient"
                android:fontFamily="@font/wikid"
                android:textSize="30dp"
                app:backgroundTint="#FF9800"
                app:icon="@drawable/wikipedia"
                tools:ignore="MissingPrefix" />

            <Button
                android:id="@+id/button_randomDrink"
                style="@android:style/Widget.Holo.ImageButton"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="10px"
                android:layout_marginRight="16px"
                android:layout_marginBottom="10px"
                android:layout_weight="0.3"
                android:text="@string/buttonRandom"
                android:fontFamily="@font/jcandlestick"
                android:textSize="27dp"
                app:backgroundTint="#FF9800"
                app:icon="@drawable/casuale"
                tools:ignore="MissingPrefix" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
